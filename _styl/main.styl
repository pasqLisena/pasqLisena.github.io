// out: ../css/style.css, libs: nib rupture

@import "nib/reset"
@import "nib"
@import "_vars";

global-reset()

*
  box-sizing border-box

html
  margin 0
  +below('s')
    font-size .9em

body
  font-family: 'Roboto', sans-serif
  background lightGray

h1
  font-family titleFont
  font-size 1.5em
  padding-bottom .2em

  display inline-block
  color main
  border-bottom .2rem solid #000
  margin-bottom 1.4em
  
  &:not(:first-of-type)
    margin-top 2em
  
h2
  font-family titleFont
  font-size 1em
  margin-bottom 1em

p
  line-height 1.2em

a
  color main
  text-decoration none
  font-weight 500
  transition all 200ms ease-in-out
  &:hover
    text-decoration underline

.inner
  margin auto
  max-width 900px

  &.flex
    +above('l')
      display flex

.page.internal
  +above('m')
    min-height 30em

.box
  display block
  margin 1em
  padding 2em

  background #fff
  box-shadow 0 2px 2px 0 rgba(0, 0, 0, .14),
            0 1px 5px 0 rgba(0, 0, 0, .12),
            0 3px 1px -2px rgba(0, 0, 0, .2)
  &.twitter
    flex 0 0 400px
    padding 1em
    text-align center

  em
    font-style italic

  ul
    list-style disc
    padding-left 1.3em
    li
      margin-bottom .4em
  
  > ul
      margin-bottom 1em
      li
        font-weight 100
        line-height 1.2em
      a
        font-weight 100

nav
  position relative
  z-index 10

strong
  font-weight bold
  
.demo
  margin-bottom 2em
  +above('m')
    display flex
    p
      padding-left 1em
    h2
      flex 0 0 5em
    img
      max-width 10em

.project
  margin-bottom 3em
  > p > img
    max-width 10em
    +above('s')
      float right
  blockquote
    opacity .5
    font-size 0.8em
    margin-bottom .3em
      
.links
  display block
  font-size .8em
  a
    font-weight 400 !important
    color #777
    opacity .7
    &:hover
      opacity 1
    &:after
      margin 0 .2em 0 .4em
      content '|'
      color #000
    &:last-of-type:after
      content none
      
@import "components/_header";
@import "components/_footer";
@import "components/_nav";
